{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"es6",
			"DOM"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"sourceMap": true,
		"plugins": [
			{
				"name": "eslint"
			}
		],
		/* Enabled for React */
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
	},
	"exclude": [
		"node_modules",
		"server",
		".vscode-test"
	]
}
